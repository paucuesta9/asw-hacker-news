
<center>
  <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
    <tbody>
      <tr>
        <td bgcolor="#ff6600">
          <table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px">
            <tbody>
              <tr>
                <td style="width:18px;padding-right:4px"><a href="https://hacker-news-fib.herokuapp.com/"><img src=<%=asset_path('y18.gif') %> width="18" height="18" style="border:1px white solid;"></a></td>
                <td style="line-height:12pt; height:10px;"><span class="pagetop"><b class="hnname"><a href="/">Hacker News</a></b><a href="/newest">new</a> | <a href="/threads">threads</a> | <a href="/ask">ask</a> | <a href="/submit">submit</a> | <a><font color="#FFFFFF"> upvoted </font></a></span></td>
                <td style="text-align:right;padding-right:4px;">
                  <% if session[:username] %>
                    <span class="pagetop"> <a href="/user/<%= session[:user_id]%>"><%= session[:username]%></a></span>
                    <span class="pagetop"><a href="logout">Logout</a></span>
             
                  <% else %>
                    <span class="pagetop">
                      <%= button_to '/auth/google_oauth2', class:"myClass" do %>
                        <div class="google-btn">
                          <div class="google-icon-wrapper">
                            <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
                          </div>
                          <p class="btn-text"><b>Sign in with Google</b></p>
                        </div>
                      </div>
                      <%end%>
                    </span>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
      <tr id="pagespace" title="" style="height:10px"></tr>
      <tr>
        <td>
          <table border="0" cellpadding="0" class="itemlist">
            <tbody>           
              <% @posts.each do |post| %>
              <tr class="athing comtr">
                  <td>
                    <table border="0">
                      <tbody>
                        <tr>    
                          <td class="ind">
                            <img src="s.gif" width="0" height="1">
                          </td>
                          <%if @voted and @voted.find_by(post_id: post.id)%>
                              <td class="votelinks" valign="top">
                              <%= link_to :controller => "vote_posts", :action => "unvote", :id => post.id do %>
                              <center><font color="#ff6600">*</font>
                              <img src="s.gif" width="1" height="1"></center>    
                          <% end %>
                          </td>
                          <% else %>
                              <td valign="top" class="votelinks"><center>
                              <%= link_to :controller => "vote_posts", :action => "upvote", :id => post.id do %>
                              <div class="votearrow" title="upvote"></div>
                              <% end %>
                              </center></td>
                          <%end%>
                          <td class="default">
                            <div style="margin-top:2px; margin-bottom:-10px;">
                              <span class="comhead">
                                <% if session[:username] and post.user.username == session[:username] %>
                                    <%= link_to post.user do %>
                                        <font color="#3c963c"><%= post.user.username %></font>
                                    <%end%>
                                <% else %>
                                    <%= link_to post.user.username, :controller => "users", :action => "show", :id => post.user %> 
                                <% end %>
                              </span>
                            </div>
                            <br>
                            <div class="comment">
                              <span class="commtext c00"><%=post.text%></span>
                              <div class="reply">        
                                <p>
                                </p>
                              </div>
                            </div>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </td>
                </tr>
              <% end %>














            </tbody>
          </table>
        </td>
      </tr>
      <%= render 'footer' %>
    </tbody>
  </table>
</center>
