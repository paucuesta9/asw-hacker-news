
<center>
  <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
    <tbody>
      <%= render 'header' %>
      <tr id="pagespace" title="" style="height:10px"></tr>
      
      <tr>
        <td>
          <table border="0" cellpadding="0" class="itemlist">
            <tbody>              
              <% @comments.each do |comment| %>
                <tr class="athing comtr">
                  <td>
                    <table border="0">
                      <tbody>
                        <tr>    
                          <td class="ind">
                            <img src="s.gif" width="0" height="1">
                          </td>
                            <%if @voted and @voted.find_by(comment_id: comment)%>
                                <td class="votelinks" valign="top">
                                <%= link_to :controller => "vote_comments", :action => "unvote", :id => comment.id do %>
                                <center><font color="#ff6600">*</font>
                                <img src="s.gif" width="1" height="1"></center>    
                            <% end %>
                            </td>
                            <% else %>
                                <td valign="top" class="votelinks"><center>
                                <%= link_to :controller => "vote_comments", :action => "upvote", :id => comment.id do %>
                                <div class="votearrow" title="upvote"></div>
                                <% end %>
                                </center></td>
                            <%end%>
                          <td class="default">
                            <div style="margin-top:2px; margin-bottom:-10px;">
                              <span class="comhead">
                                <span class="score" id="score_26881997"><%= comment.votes.to_s%> point(s)</span> by 
                                <% if session[:username] and comment.user.username == session[:username] %>
                                    <%= link_to comment.user do %>
                                        <font color="#3c963c"><%= comment.user.username %></font>
                                    <%end%>
                                <% else %>
                                    <%= link_to comment.user.username, :controller => "users", :action => "show", :id => comment.user %> 
                                <% end %>
                                <span class="age"><%= link_to time_ago_in_words(@reply.created_at) + ' ago', comment %></span> 
                                <span class="par"> | <%= link_to 'parent', comment.post %></span> 
                                <span class="storyon"> | on: <%= link_to comment.getPost.title, comment.getPost %></span>
                              </span>
                            </div>
                            <br>
                            <div class="comment">
                              <span class="commtext c00"><%=comment.text%></span>
                              <div class="reply">        
                                <p>
                                  <font size="1">
                                  <u><%= link_to 'reply', comment %></u>
                                  </font>
                                </p>
                              </div>
                            </div>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </td>
      </tr>
      <%= render 'footer' %>
    </tbody>
  </table>
</center>